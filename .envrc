# Direnv configuration for automatic environment activation
# This file automatically loads the Nix development environment
# when you enter the directory

# Use the Nix flake development shell
use flake

# Optional: Set up local environment variables
export ANTORA_CACHE_DIR=".cache/antora"
export NODE_ENV="development"

# Optional: Load any local .env file if it exists
if [ -f .env ]; then
  dotenv
fi

# Create necessary directories
mkdir -p .cache/antora build public

# Show environment status
echo "âœ… Guardrail Service Docs environment loaded"
echo "   Node: $(node --version)"
echo "   npm: $(npm --version)"